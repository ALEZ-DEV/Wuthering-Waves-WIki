<%= form_tag "/wiki/create" do %>
  <div class="flex justify-center">
    <%= text_field_tag :title, "", placeholder: "Title", class: ['input', 'input-bordered', 'mt-10', 'w-2/3'], :required => true %>
    <%= submit_tag "Create page", class: ['btn', 'btn-bordered', 'mt-10', 'w-1/3', 'ml-5']%>
  </div>
  <%= text_area_tag :content, "", placeholder: "Main content\nTips: You can do html here", size: "60x12", class: ['textarea', 'textarea-bordered', 'mt-10', 'resize-none'] %>
  <br>
<% end %>
